<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/find11_icon"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/find_icon111"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/findIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_baseline_search_24"
                app:layout_constraintEnd_toStartOf="@id/searchRestaurant"
                app:layout_constraintBottom_toTopOf="@id/recyclerViewChooseRestaurant"
                app:layout_constraintTop_toBottomOf="@id/randomMeal"
                tools:layout_editor_absoluteY="154dp" />

            <EditText
                android:id="@+id/searchRestaurant"
                android:layout_width="360dp"
                android:layout_height="42dp"
                android:layout_marginTop="4dp"
                android:hint="find your favourite restaurant"
                app:layout_constraintStart_toEndOf="@id/findIcon"
                app:layout_constraintTop_toBottomOf="@id/randomMeal"
                app:layout_constraintBottom_toTopOf="@id/recyclerViewChooseRestaurant"
                tools:layout_editor_absoluteX="56dp" />

            <ImageView
                android:id="@+id/randomMeal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/searchRestaurant"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewChooseRestaurant"
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:layout_marginBottom="28dp"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toTopOf="@id/rawndomMeal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchRestaurant"
                tools:listitem="@layout/item_choose_restaurants" />

            <ImageView
                android:id="@+id/rawndomMeal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewChooseRestaurant"
                tools:layout_editor_absoluteX="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


