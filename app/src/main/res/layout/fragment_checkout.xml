<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/find_icon111"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-203dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/returnBT"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_baseline_arrow_back_return"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameRestaurantTV"
                android:layout_width="400dp"
                android:layout_height="44dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:text="Mc Donald's - Magnolia"
                android:textColor="@color/black"
                android:textSize="34sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/returnBT" />

            <TextView
                android:id="@+id/address"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Address:"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameRestaurantTV" />

            <TextView
                android:id="@+id/street"
                android:layout_width="280dp"
                android:layout_height="26dp"
                android:layout_marginStart="32dp"
                android:gravity="start"
                android:text="Małopanewska 24A/13"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address" />

            <TextView
                android:id="@+id/city"
                android:layout_width="280dp"
                android:layout_height="26dp"
                android:layout_marginStart="32dp"
                android:gravity="start"
                android:text="Wrocław, 54-212"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/street" />

            <Button
                android:id="@+id/addMealToBasketBT"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="39dp"
                android:background="@color/black"
                android:scaleType="centerCrop"
                android:text="EDIT"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/street"
                app:layout_constraintTop_toBottomOf="@+id/nameRestaurantTV" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city" />

            <TextView
                android:id="@+id/del"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="Delivery:"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:background="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/del">


                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@color/white"
                    android:text="Normal" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white"
                    android:text="Choose a time" />

            </RadioGroup>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="12dp"
                android:text="Order:"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <Button
                android:id="@+id/returnToRestaurantBT"
                android:layout_width="158dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:background="@color/black"
                android:scaleType="centerCrop"
                android:text="Return to Restaurant"
                android:textColor="@color/white"
                android:textSize="9sp"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewBasket"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.285"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:listitem="@layout/item_basket" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewBasket" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="12dp"
                android:text="Amount to pay:"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/te"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="Order Value:" />

                    <TextView
                        android:id="@+id/orderValueTV"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="right"
                        android:text="88.00" />

                    <TextView
                        android:id="@+id/currencyTV"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="2dp"
                        android:text="zł" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tex"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="Delivery:" />

                    <TextView
                        android:id="@+id/deliveryTV"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="right"
                        android:text="2.00" />

                    <TextView
                        android:id="@+id/currencyTV1"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="2dp"
                        android:text="zł" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/te3x"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="Payment Service:" />

                    <TextView
                        android:id="@+id/serviceTV"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="right"
                        android:text="4.64" />

                    <TextView
                        android:id="@+id/currencyTV2"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="2dp"
                        android:text="zł" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/te333x"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="Discount:" />

                    <TextView
                        android:id="@+id/discountTV"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="right"
                        android:text="20.00" />

                    <TextView
                        android:id="@+id/currencyTV3"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="2dp"
                        android:text="zł" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tov"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="Total:"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/totalTV"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="right"
                        android:text="100.00 zł"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/currencyTV4"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="2dp"
                        android:text="zł"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/submitOrderBT"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                android:background="@color/black"
                android:scaleType="centerCrop"
                android:text="Submit order"
                android:textColor="@color/white"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>